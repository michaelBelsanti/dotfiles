## APPLICATIONS ##

	~/.scripts/albert.sh
# rofi
super + {space,Tab}
	rofi -show {drun,window} -theme ~/.config/rofi/main.rasi
super + m 
	rofi -show calc -theme ~/.config/rofi/calc.rasi -no-show-match -no-sort -calc-command "echo -n '{result}' | xclip"
super + {o,g}
	~/.config/rofi/{options.sh,games.sh}
	
# term
super + Return
	alacritty

# browser 
super + b
	firefox

# files
super + n
	nemo

# editor
super + e
	vscodium

# discord
super + d
	flatpak run com.discordapp.Discord

# screenshots
super + {ctrl + s, s}
	flameshot {screen -c,gui}

# xkill
super + shift + q
	xkill

# run update
super + u
	~/.config/polybar/scripts/runupdate.sh

# restart easyeffects
super + shift + ctrl + e
	~/.scripts/eerestart.sh

# toggle picom
super + c
	~/.scripts/picom.sh

# lock
super + Escape
	betterlockscreen --off 20 -l dimblur

# dnd
super + i
  ~/.scripts/dunstctl.sh
