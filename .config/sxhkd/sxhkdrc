## APPLICATIONS ##

	~/.scripts/albert.sh

# rofi
super + {space,Tab}
	rofi -show {drun,window} -theme ~/.config/rofi/main.rasi

super + {o,g}
	~/.config/rofi/{options.sh,games.sh}
	
# term
super + Return
	alacritty

# browser 
super + b
	librewolf

# files
super + n
	pcmanfm

# editor
super + e
	vscodium

# discord
super + d
	flatpak run com.discordapp.Discord

# screenshots
super + {ctrl + s, s}
	flameshot {screen -c,gui}

# xkill
super + shift + q
	xkill

# restart easyeffects
super + shift + ctrl + e
	~/.scripts/eerestart.sh

# toggle picom
super + c
	~/.scripts/picom.sh

# lock
super + shift + Delete
	betterlockscreen -l
