## APPLICATIONS ##

# rofi
super + {space,Tab}
	rofi -show {drun,window} -theme ~/.config/rofi/main.rasi
super + m 
	rofi -show calc -theme ~/.config/rofi/calc.rasi -no-show-match -no-sort -calc-command "echo -n '{result}' | xclip"
super + {o,g}
	~/.config/rofi/{options.sh,games.sh}
	
# term
super + Return
	alacritty

# browser 
super + b
	firefox

# files
super + e
	nemo

# discord
super + d
	flatpak run com.discordapp.Discord

# do not disturb
super + n
	~/.scripts/togdnd.sh

# screenshots
super + {s, shift + s}
	flameshot {full --region 1920x1080+1920+0 -c, gui}


# xkill
super + shift + q
	xkill

# nyrna
super + p
	nyrna -t

# run update
super + u
	~/.config/polybar/scripts/runupdate.sh

# restart easyeffects
super + shift + ctrl + e
	~/.scripts/eerestart.sh

# toggle picom
super + c
	~/.scripts/picom.sh

# lock
super + Escape
	betterlockscreen --off 15 -l dimblur

# save replay
super + v
  killall -SIGUSR1 gpu-screen-recorder
