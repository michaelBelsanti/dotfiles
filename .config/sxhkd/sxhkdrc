## APPLICATIONS ##

# albert
super + space
	~/.scripts/albert.sh

# rofi
super + {g,o,Tab}
	~/.config/rofi/scripts/rofi-wrapper.sh {games,options,windows}

# term
super + Return
	alacritty

# browser 
super + b
	librewolf

# files
super + n
	pcmanfm

# editor
super + e
	vscodium

# discord
super + d
	flatpak run com.discordapp.Discord

# emoji
super + g
	emote

# screenshots
super + {ctrl + s, s}
	flameshot {screen -c,gui}

# restart easyeffects
super + shift + ctrl + e
	~/.scripts/eerestart.sh

# toggle picom
super + c
	~/.scripts/picom.sh

# lock
super + shift + Delete
	betterlockscreen -l -off 5
