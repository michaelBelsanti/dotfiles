## APPLICATIONS ##

# rofi
super + {space,Tab,o,m,ctrl+v}
	~/.config/rofi/wrapper.sh -{r,w,o,m,c}
	
# term
super + Return
	alacritty

# browser 
super + b
	firefox

# files
super + e
	nemo

# discord
super + d
	flatpak run com.discordapp.Discord

# do not disturb
super + n
	~/.scripts/togdnd.sh -t

# screenshots
# super + {s, shift + s}
	# shutter {a,shotgun $(hacksaw -f "-i %i -g %g") - | xclip -t 'image/png' -selection clipboard}

super + shift + s
  shotgun $(hacksaw -f "-i %i -g %g") - | xclip -t 'image/png' -selection clipboard

# xkill
super + shift + q
	xkill

# nyrna
super + p
	nyrna -t

# run update
super + u
	~/.config/polybar/scripts/runupdate.sh

# restart easyeffects
super + shift + ctrl + e
	~/.scripts/eerestart.sh

# toggle picom
super + c
	~/.scripts/picom.sh

# lock
super + Escape
	betterlockscreen --off 20 -l dimblur

# save replay
super + v
  ~/.scripts/replay.sh
